    <style>
        :root {
            --green: #00CB97;
            --dark-bg: #111827;
            --card-bg: rgba(31, 41, 55, 0.6);
        }

        body {
            background: var(--dark-bg);
            color: #f3f4f6;
        }

        .infographic-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem 4rem;
        }

        /* Hero */
        .hero-section {
            text-align: center;
            margin-bottom: 3rem;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 0.75rem;
        }

        .hero-subtitle {
            font-size: 1.125rem;
            color: #9ca3af;
        }

        /* Flow Steps */
        .flow-container {
            position: relative;
            margin-bottom: 3rem;
        }

        .flow-line {
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 2px;
            background: rgba(0, 203, 151, 0.2);
            transform: translateX(-50%);
        }

        .step-item {
            position: relative;
            display: flex;
            align-items: center;
            margin-bottom: 2.5rem;
            gap: 2rem;
        }

        .step-item:nth-child(even) {
            flex-direction: row-reverse;
        }

        .step-number {
            flex-shrink: 0;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--green);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: 700;
            position: relative;
            z-index: 2;
            box-shadow: 0 0 0 8px var(--dark-bg);
        }

        .step-content {
            flex: 1;
            background: var(--card-bg);
            border: 1px solid rgba(0, 203, 151, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            position: relative;
        }

        .step-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .step-description {
            color: #d1d5db;
            font-size: 0.9375rem;
            line-height: 1.6;
            margin-bottom: 1rem;
        }

        .step-highlight {
            background: rgba(0, 203, 151, 0.05);
            border: 1px solid rgba(0, 203, 151, 0.2);
            border-radius: 8px;
            padding: 0.875rem;
            margin-top: 0.75rem;
        }

        .step-highlight h4 {
            color: var(--green);
            font-size: 0.8125rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .step-highlight p {
            color: #e5e7eb;
            font-size: 0.8125rem;
            margin: 0.25rem 0;
        }

        /* Stats Grid */
        .stats-section {
            margin-bottom: 3rem;
        }

        .stats-title {
            text-align: center;
            font-size: 1.875rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 2rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 1rem;
        }

        .stat-card {
            background: var(--card-bg);
            border: 1px solid rgba(55, 65, 81, 0.6);
            border-radius: 10px;
            padding: 1.25rem;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            border-color: var(--green);
            transform: translateY(-2px);
        }

        .stat-icon {
            font-size: 2.5rem;
            color: var(--green);
            margin-bottom: 0.75rem;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #9ca3af;
            font-weight: 500;
        }

        /* Example Box */
        .example-box {
            background: rgba(0, 203, 151, 0.05);
            border: 2px solid var(--green);
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
        }

        .example-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .example-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.75rem;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 6px;
            margin-bottom: 0.5rem;
        }

        .example-label {
            color: #9ca3af;
            font-size: 0.875rem;
        }

        .example-value {
            color: white;
            font-weight: 600;
            font-size: 0.9375rem;
        }

        .example-value.profit {
            color: var(--green);
            font-size: 1.125rem;
        }

        /* CTA */
        .cta-section {
            background: rgba(0, 203, 151, 0.05);
            border: 2px solid var(--green);
            border-radius: 12px;
            padding: 2.5rem;
            text-align: center;
        }

        .cta-title {
            font-size: 2rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.75rem;
        }

        .cta-subtitle {
            font-size: 1.125rem;
            color: #9ca3af;
            margin-bottom: 2rem;
        }

        .cta-button {
            display: inline-block;
            padding: 1rem 2.5rem;
            background: var(--green);
            color: white;
            font-weight: 700;
            font-size: 1.125rem;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .cta-button:hover {
            background: #00e5af;
            transform: translateY(-2px);
        }

        /* Mobile Adjustments */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 1.875rem;
            }

            .flow-line {
                left: 40px;
            }

            .step-item,
            .step-item:nth-child(even) {
                flex-direction: column;
                align-items: flex-start;
                padding-left: 100px;
            }

            .step-number {
                position: absolute;
                left: 0;
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }

            .step-content {
                width: 100%;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .infographic-container {
                padding-bottom: 150px;
            }
        }
    </style>
