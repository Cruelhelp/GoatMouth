    <style>
        :root {
            --page-bg: #111827;
            --panel-bg: #1f2937;
            --border: #374151;
            --text-main: #f3f4f6;
            --text-muted: #9ca3af;

            --green: #00CB97;
            --purple: #631BDD;
            --yellow: #F2C300;
            --red: #ef4444;

            --radius-lg: 12px;
        }

        body {
            background: var(--page-bg);
            color: var(--text-main);
            min-height: 100vh;
        }

        .earn-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            text-align: center;
        }

        .earn-icon {
            font-size: 80px;
            background: linear-gradient(135deg, var(--yellow) 0%, var(--green) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 24px;
        }

        .earn-title {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 16px;
            background: linear-gradient(135deg, #fff 0%, var(--text-muted) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .earn-description {
            font-size: 18px;
            color: var(--text-muted);
            max-width: 600px;
            margin: 0 auto 32px;
            line-height: 1.6;
        }

        .earn-features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .feature-card {
            background: var(--panel-bg);
            border: 1px solid var(--border);
            border-radius: var(--radius-lg);
            padding: 24px;
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-4px);
            border-color: var(--yellow);
            box-shadow: 0 8px 24px rgba(242, 195, 0, 0.15);
        }

        .feature-icon {
            font-size: 32px;
            margin-bottom: 16px;
        }

        .feature-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 8px;
            color: var(--text-main);
        }

        .feature-desc {
            font-size: 14px;
            color: var(--text-muted);
            line-height: 1.5;
        }

        .back-btn {
            padding: 12px 24px;
            background: linear-gradient(135deg, var(--green) 0%, #027A40 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 203, 151, 0.3);
        }

        @media (max-width: 768px) {
            .main-header {
                padding: 16px 20px;
            }

            .earn-title {
                font-size: 28px;
            }

            .earn-description {
                font-size: 16px;
            }

            .earn-icon {
                font-size: 60px;
            }

            .earn-features {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <!-- Logo Header -->
    <div class="logo-header">
      <div style="display: flex; align-items: center; gap: 12px;">
        <div class="hamburger" id="hamburger" title="Toggle Menu" onclick="toggleMobileSidebar()">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="logo-container">
